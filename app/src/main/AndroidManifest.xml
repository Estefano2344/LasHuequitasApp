<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LasHuequitasApp"
        tools:targetApi="31">

        <!-- Punto de entrada de la app -->
        <activity
            android:name=".PantallaInicioActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Actividades secundarias -->
        <activity
            android:name=".HomeActivity"
            android:exported="false" />
        <activity
            android:name=".ReviewDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".RestaurantDetailActivity"
            android:exported="false" />
        <activity
            android:name=".RestaurantReviewsActivity"
            android:exported="false" />
        <activity
            android:name=".NuevoComentarioActivity"
            android:exported="true" />
        <activity
            android:name=".EditarPerfilActivity"
            android:exported="true" />
        <activity
            android:name=".PerfilActivity"
            android:exported="true" />
        <activity
            android:name=".RecuperarContrasenaActivity"
            android:exported="false" />
        <activity
            android:name=".PantallaInicioDeSesionActivity"
            android:exported="true" />
        <activity
            android:name=".SearchActivity"
            android:exported="false" />
        <activity
            android:name=".RegistroActivity"
            android:exported="true" />
        <activity
            android:name=".NuevaResenaActivity"
            android:exported="true" />
        <activity
            android:name=".MainActivity"
            android:exported="true" />
    </application>
</manifest>