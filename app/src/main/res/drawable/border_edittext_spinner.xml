<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <!-- Fondo con el mismo color y características que el shape proporcionado -->
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white"/> <!-- Fondo blanco -->
            <stroke android:color="@color/brown_textFillFields_percentRating" android:width="2dp"/> <!-- Borde marrón con grosor de 2dp -->
            <corners android:radius="8dp"/> <!-- Bordes redondeados con radio de 8dp -->
        </shape>
    </item>

    <!-- Flecha hacia abajo (ícono) -->
    <item android:gravity="end|center_vertical" android:end="16dp">
        <bitmap android:src="@drawable/up_down_arrow"
            android:tint="@color/brown_icons"/> <!-- Ícono de la flecha y color del ícono -->
    </item>
</layer-list>
