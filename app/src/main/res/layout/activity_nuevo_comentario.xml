<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/barra_sup_inf"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingTop="24dp"
        android:paddingEnd="16dp"
        android:paddingBottom="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/closeComment"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:contentDescription="@string/cerrar"
            android:src="@drawable/cerrar" />

        <TextView
            android:id="@+id/commentTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/plus_jakarta_sans"
            android:gravity="center"
            android:text="@string/agregarComentario"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/contentLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topBar">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/comentarioTextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusTopStart="16dp"
            app:boxCornerRadiusTopEnd="16dp"
            app:boxCornerRadiusBottomStart="16dp"
            app:boxCornerRadiusBottomEnd="16dp"
            app:boxBackgroundColor="@color/fill_buttons">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editComentario"
                android:layout_width="match_parent"
                android:layout_height="158dp"
                android:fontFamily="@font/plus_jakarta_sans"
                android:gravity="top|start"
                android:hint="@string/escribeTuComentario"
                android:inputType="textMultiLine"
                android:maxLines="5"
                android:padding="12dp"
                android:scrollbars="vertical"
                android:textColor="@color/brown_textFillFields_percentRating" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/textCalificar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/plus_jakarta_sans"
            android:gravity="start"
            android:text="@string/calificarResena"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/estrellasLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/star1"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="21dp"
                android:src="@drawable/estrella" />

            <ImageView
                android:id="@+id/star2"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="21dp"
                android:src="@drawable/estrella" />

            <ImageView
                android:id="@+id/star3"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="21dp"
                android:src="@drawable/estrella" />

            <ImageView
                android:id="@+id/star4"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="21dp"
                android:src="@drawable/estrella" />

            <ImageView
                android:id="@+id/star5"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/estrella" />
        </LinearLayout>

        <Button
            android:id="@+id/btnSubir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:background="@drawable/btn_background"
            android:fontFamily="@font/plus_jakarta_sans"
            android:text="@string/btn_subir"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textStyle="bold" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>