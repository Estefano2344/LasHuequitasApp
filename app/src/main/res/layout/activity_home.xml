<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Barra superior -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/barra_sup_inf"
        android:orientation="vertical"
        android:paddingTop="24dp"
        android:paddingBottom="12dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/opcionesImageView"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/opciones"
                android:contentDescription="@string/opciones"
                android:layout_marginEnd="12dp"/>

            <TextView
                android:id="@+id/appNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold"
                android:fontFamily="@font/plus_jakarta_sans"
                android:layout_marginEnd="16dp"/>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Buscador -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/searchTextInputLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:boxBackgroundMode="filled"
        app:boxCornerRadiusTopStart="24dp"
        app:boxCornerRadiusTopEnd="24dp"
        app:boxCornerRadiusBottomStart="24dp"
        app:boxCornerRadiusBottomEnd="24dp"
        app:boxBackgroundColor="@color/fill_buttons"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/searchEditText"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:drawableLeft="@drawable/search"
            android:fontFamily="@font/plus_jakarta_sans"
            android:hint="@string/buscar_restaurantes"
            android:paddingStart="44dp"
            android:textColor="@color/brown_textFillFields_percentRating" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Título Recomendados -->
    <TextView
        android:id="@+id/recomendadosTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/plus_jakarta_sans"
        android:text="@string/recomendados"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/searchTextInputLayout" />

    <!-- Carrusel Recomendados -->
    <HorizontalScrollView
        android:id="@+id/recomendadosScroll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/recomendadosTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Restaurante 1 -->
            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginEnd="6dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@drawable/restaurante1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/restaurante1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/restaurante_uno"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:gravity="start"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/plus_jakarta_sans"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/estrellah" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/puntuacion"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="8dp"
                        android:fontFamily="@font/plus_jakarta_sans"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/resenas"
                        android:textSize="13sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/plus_jakarta_sans"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Restaurante 2 -->
            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginEnd="6dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@drawable/restaurante2"
                    android:scaleType="centerCrop"
                    android:src="@drawable/restaurante2" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/restaurante_dos"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:gravity="start"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/plus_jakarta_sans"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/estrellah" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/puntuacion"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="8dp"
                        android:fontFamily="@font/plus_jakarta_sans"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/resenas"
                        android:textSize="13sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/plus_jakarta_sans"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Restaurante 3 -->
            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@drawable/restaurante3"
                    android:scaleType="centerCrop"
                    android:src="@drawable/restaurante3" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/restaurante_tres"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:gravity="start"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/plus_jakarta_sans"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/estrellah" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/puntuacion"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="8dp"
                        android:fontFamily="@font/plus_jakarta_sans"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/resenas"
                        android:textSize="13sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/plus_jakarta_sans"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>

    <!-- Título Populares -->
    <TextView
        android:id="@+id/popularesTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/populares"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/plus_jakarta_sans"
        app:layout_constraintTop_toBottomOf="@id/recomendadosScroll"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Carrusel Populares -->
    <HorizontalScrollView
        android:id="@+id/popularesScroll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/popularesTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Restaurante 4 -->
            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginEnd="6dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@drawable/restaurante4"
                    android:scaleType="centerCrop"
                    android:src="@drawable/restaurante4" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/restaurante_cuatro"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:gravity="start"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/plus_jakarta_sans"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/estrellah" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/puntuacion"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="8dp"
                        android:fontFamily="@font/plus_jakarta_sans"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/resenas"
                        android:textSize="13sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/plus_jakarta_sans"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Restaurante 5 -->
            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginEnd="6dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@drawable/restaurante5"
                    android:scaleType="centerCrop"
                    android:src="@drawable/restaurante5" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/restaurante_cinco"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:gravity="start"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/plus_jakarta_sans"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/estrellah" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/puntuacion"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="8dp"
                        android:fontFamily="@font/plus_jakarta_sans"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/resenas"
                        android:textSize="13sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/plus_jakarta_sans"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Restaurante 6 -->
            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@drawable/restaurante6"
                    android:scaleType="centerCrop"
                    android:src="@drawable/restaurante6" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/restaurante_seis"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:gravity="start"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/plus_jakarta_sans"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/estrellah" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/puntuacion"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="8dp"
                        android:fontFamily="@font/plus_jakarta_sans"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/resenas"
                        android:textSize="13sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/plus_jakarta_sans"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>

    <!-- Barra de navegación inferior -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/barra_sup_inf"
        app:itemIconTint="@color/black"
        app:itemTextColor="@color/black"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:menu="@menu/bottom_nav_menu"/>
</androidx.constraintlayout.widget.ConstraintLayout>