<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/orange_ratingRestaurantTransparent"
    android:padding="16dp"
    android:gravity="center_horizontal">

    <!-- Espacio arriba para bajar el contenido -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"/>

    <ImageView
        android:id="@+id/userImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/perfil"
        android:scaleType="centerCrop"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nombre_usuario"
        android:textStyle="bold"
        android:textSize="18sp"
        android:fontFamily="@font/plus_jakarta_sans"
        android:layout_marginBottom="4dp"/>

    <TextView
        android:id="@+id/userEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/correo_ejemplo_com"
        android:textSize="14sp"
        android:fontFamily="@font/plus_jakarta_sans"
        android:layout_marginBottom="24dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/btnCerrarSesion"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:background="@color/white"
        android:backgroundTint="@color/white"
        android:drawablePadding="12dp"
        android:gravity="center_vertical|start"
        android:paddingStart="16dp"
        android:text="@string/cerrar_sesi_n"
        android:textColor="@color/black"
        android:textColorLink="@color/barra_sup_inf"
        app:icon="@drawable/cerrarsesion" />
</LinearLayout>