<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/detail_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".RestaurantDetailActivity">

    <!-- AppBar con botón de volver -->
    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/barra_sup_inf"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingTop="24dp"
        android:paddingEnd="16dp"
        android:paddingBottom="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            tools:ignore="UseCompoundDrawables,UselessParent">

            <ImageView
                android:id="@+id/closeDetail"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginEnd="12dp"
                android:contentDescription="@string/back_button"
                android:src="@drawable/flecha_atras" />

            <!-- Título centrado -->
            <TextView
                android:id="@+id/detailTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/plus_jakarta_sans"
                android:gravity="center"
                android:text="@string/restaurant"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>


    <!-- Contenido desplazable -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigationView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Título de la reseña -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/plus_jakarta_sans"
                android:text="@string/restaurante_uno"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold" />

            <!-- Imagen principal -->
            <ImageView
                android:id="@+id/ivRestaurant"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="12dp"
                android:importantForAccessibility="no"
                android:scaleType="centerCrop"
                android:src="@drawable/restaurante1" />

            <!-- Contenedor HORIZONTAL para rating general + distribución -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:layout_margin="16dp"
                android:weightSum="2">

                <!-- IZQUIERDA: puntuación, estrellas y reseñas apilados verticalmente -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:padding="8dp">

                    <!-- 1. Puntuación numérica -->
                    <TextView
                        android:id="@+id/tvRatingValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/plus_jakarta_sans"
                        android:text="@string/puntuacion"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp"/>

                    <!-- 2. Estrellas -->
                    <androidx.appcompat.widget.AppCompatRatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:stepSize="0.1"
                        android:rating="4.5"
                        android:isIndicator="true"
                        style="?attr/ratingBarStyleIndicator"
                        android:progressTint="@color/orange_buttons_filledStars"
                        android:secondaryProgressTint="@color/orange_ratingRestaurantTransparent"
                        android:progressTintMode="src_in"
                        android:layout_marginBottom="4dp"
                        android:scaleX="0.5"
                        android:scaleY="0.5"/>

                    <!-- 3. Número de reseñas -->
                    <TextView
                        android:id="@+id/tvReviewsCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/plus_jakarta_sans"
                        android:text="@string/resenas"
                        android:textColor="@color/brown_reviewsDescription_textIcons_profileDetails"
                        android:textSize="14sp"/>

                </LinearLayout>


                <!-- DERECHA: distribución de calificaciones -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="16dp"
                    tools:ignore="RtlSymmetry">

                    <!-- 5 estrellas -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="24dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/plus_jakarta_sans"
                            android:text="@string/_5"
                            android:textColor="@color/brown_textFillFields_percentRating"
                            android:textSize="14sp" />

                        <ProgressBar
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="0dp"
                            android:layout_height="8dp"
                            android:layout_weight="1"
                            android:max="100"
                            android:progress="50"
                            android:progressBackgroundTint="@color/orange_ratingRestaurantTransparent"
                            android:progressTint="@color/orange_buttons_filledStars" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:fontFamily="@font/plus_jakarta_sans"
                            android:text="@string/_50"
                            android:textColor="@color/brown_textFillFields_percentRating"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- 4 estrellas -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="24dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/plus_jakarta_sans"
                            android:text="@string/_4"
                            android:textColor="@color/brown_textFillFields_percentRating"
                            android:textSize="14sp" />

                        <ProgressBar
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="0dp"
                            android:layout_height="8dp"
                            android:layout_weight="1"
                            android:max="100"
                            android:progress="50"
                            android:progressBackgroundTint="@color/orange_ratingRestaurantTransparent"
                            android:progressTint="@color/orange_buttons_filledStars" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:fontFamily="@font/plus_jakarta_sans"
                            android:text="@string/_50"
                            android:textColor="@color/brown_textFillFields_percentRating"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- 3 estrellas -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="24dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/plus_jakarta_sans"
                            android:text="@string/_3"
                            android:textColor="@color/brown_textFillFields_percentRating"
                            android:textSize="14sp" />

                        <ProgressBar
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="0dp"
                            android:layout_height="8dp"
                            android:layout_weight="1"
                            android:max="100"
                            android:progress="0"
                            android:progressBackgroundTint="@color/orange_ratingRestaurantTransparent"
                            android:progressTint="@color/orange_buttons_filledStars" />
                    </LinearLayout>

                    <!-- 2 estrellas -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="24dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/plus_jakarta_sans"
                            android:text="@string/_2"
                            android:textColor="@color/brown_textFillFields_percentRating"
                            android:textSize="14sp" />

                        <ProgressBar
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="0dp"
                            android:layout_height="8dp"
                            android:layout_weight="1"
                            android:max="100"
                            android:progress="0"
                            android:progressBackgroundTint="@color/orange_ratingRestaurantTransparent"
                            android:progressTint="@color/orange_buttons_filledStars" />
                    </LinearLayout>
                    <!-- 1 estrella -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="24dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/plus_jakarta_sans"
                            android:text="@string/_1"
                            android:textColor="@color/brown_textFillFields_percentRating"
                            android:textSize="14sp" />

                        <ProgressBar
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="0dp"
                            android:layout_height="8dp"
                            android:layout_weight="1"
                            android:max="100"
                            android:progress="0"
                            android:progressBackgroundTint="@color/orange_ratingRestaurantTransparent"
                            android:progressTint="@color/orange_buttons_filledStars" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <!-- Botón Ver Reseñas -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnViewReviews"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/plus_jakarta_sans"
                android:text="@string/view_review"
                android:textAllCaps="false"
                android:textColor="@color/black"
                app:backgroundTint="@color/fill_buttons"
                app:cornerRadius="24dp" />

            <!-- Título Restaurantes recomendados -->
            <TextView
                android:id="@+id/tvRecommendedTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/plus_jakarta_sans"
                android:text="@string/restaurantes_recomendados"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- Lista vertical de recomendados -->
            <LinearLayout
                android:id="@+id/recommendedList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="16dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <!-- Ítem 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:importantForAccessibility="no"
                        android:scaleType="centerCrop"
                        android:src="@drawable/restaurante2"
                        android:background="@drawable/rounded_corner_bg" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/plus_jakarta_sans"
                            android:text="@string/restaurante_dos"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:importantForAccessibility="no"
                                android:src="@drawable/estrellah" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:fontFamily="@font/plus_jakarta_sans"
                                android:text="@string/calificacion_Restaurante_2"
                                android:textSize="14sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:fontFamily="@font/plus_jakarta_sans"
                                android:text="@string/reviews_Restaurante_2"
                                android:textSize="13sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <!-- Divider opcional -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/barra_sup_inf"/>

                <!-- Ítem 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:importantForAccessibility="no"
                        android:scaleType="centerCrop"
                        android:src="@drawable/restaurante3"
                        android:background="@drawable/rounded_corner_bg" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/plus_jakarta_sans"
                            android:text="@string/restaurante_tres"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:importantForAccessibility="no"
                                android:src="@drawable/estrellah" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:fontFamily="@font/plus_jakarta_sans"
                                android:text="@string/califcacion_Restuarante_3"
                                android:textSize="14sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:fontFamily="@font/plus_jakarta_sans"
                                android:text="@string/reviews_Restaurante_3"
                                android:textSize="13sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Barra de navegación inferior -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/barra_sup_inf"
        app:itemIconTint="@color/brown_icons"
        app:itemTextAppearanceActive="@style/BottomNavText"
        app:itemTextAppearanceInactive="@style/BottomNavText"
        app:itemTextColor="@color/brown_reviewsDescription_textIcons_profileDetails"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_nav_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>
